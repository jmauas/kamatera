{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/encendido",
      "schedule": "0 9 * * 1-5"
    },
    {
      "path": "/api/cron/apagado?cpu=8",
      "schedule": "0 23 * * 0-4"
    },
    {
      "path": "/api/cron/apagado?cpu=8",
      "schedule": "59 23 * * 0-4"
    },
    {
      "path": "/api/cron/apagado?cpu=4",
      "schedule": "0 23 * * 5"
    },
    {
      "path": "/api/cron/apagado?cpu=4",
      "schedule": "59 23 * * 5"
    },
    {
      "path": "/api/cron/encendido",
      "schedule": "0 10 * * 6"
    },
    {
      "path": "/api/cron/apagado?cpu=4",
      "schedule": "30 20 * * 6"
    },
    {
      "path": "/api/cron/apagado?cpu=8",
      "schedule": "0 20 * * 0"
    }
  ]
}
